extends base



block content
	.sub-banner
		.container
			.breadcrumb-area
				h1= title
				ul.breadcrumbs
					li
						a(href='/') Home
					li.active Contact Us
	// Sub banner end
	// Contact 1 start
	.contact-1.content-area-7
		.container
			.my_alerts
			.main-title
				h1 Contact Us
				p Send us a message and we will get back to you as soon as possible.
			.row
				.col-lg-8
					form#contact-form
						.row
							.col-lg-6.col-md-6.col-sm-12.col-xs-12
								.form-group.name
									input.form-control#contact-name(type='text' name='name' placeholder='Name')
							.col-lg-6.col-md-6.col-sm-12.col-xs-12
								.form-group.email
									input.form-control#contact-email(type='email' name='email' placeholder='Email')
							.col-lg-6.col-md-6.col-sm-12.col-xs-12
								.form-group.subject
									input.form-control#contact-subject(type='text' name='subject' placeholder='Subject')
							.col-lg-6.col-md-6.col-sm-12.col-xs-12
								.form-group.number
									input.form-control#contact-phone(type='text' name='phone' placeholder='Number')
							.col-lg-12.col-md-12.col-sm-12.col-xs-12
								.form-group.message
									textarea.form-control#contact-message(name='message' placeholder='Write message')
							.col-lg-6.col-md-12.col-sm-12.col-xs-12
								.send-btn
									button.btn.btn-color.btn-md.btn-message(type='submit') Send Message
				.col-lg-4
					.contact-info
						h3 Contact Info
						.ci-box
							.icon
								i.fa.fa-map-marker
							.detail
								h5 Office Address
								p Apartment 52, Lagos Island
						.ci-box
							.icon
								i.fa.fa-phone
							.detail
								h5 Phone
								p
									a(href='tel:+234-8133-0079-06') 08133007906
						.ci-box
							.icon
								i.fa.fa-envelope
							.detail
								h5 Email
								p
									a(href='tel:info@themevessel.com') xerohotels@gmail.com
